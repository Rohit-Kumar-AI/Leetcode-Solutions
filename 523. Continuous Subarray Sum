class Solution {
public:
    bool checkSubarraySum(vector<int>& nums, int k) {
        unordered_map<int, int> modMap;
        modMap[0] = -1;
        int sum = 0;
        for (int i = 0; i < nums.size(); ++i) {
            sum += nums[i];
            int mod = k ? sum % k : sum;
            if (modMap.count(mod)) {
                if (i - modMap[mod] > 1) return true;
            } else {
                modMap[mod] = i;
            }
        }
        return false;
    }
};523. Continuous Subarray Sum
